<Page x:Class="todo_wpf.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todo_wpf.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel Background="#FFD6D6D6" Margin="230,0,230,0">
            <Label Content="Create a task"/>
            <Label Content="Task name"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Label Content="Due Date"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Label Content="Assignee"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Button Content="Create Task"/>
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>

        </StackPanel>

    </Grid>
</Page>
