<UserControl x:Class="todo_wpf.Views.TodoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:todo_wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <StackPanel Background="#FFE6E6E6">
            <Label Content="Create a task" FontWeight="Bold"/>
            <Label Content="Task name"/>
            <TextBox x:Name="TaskNameBox" TextWrapping="Wrap" Text="{Binding Path=TaskName, Mode=Default}" Width="240"/>
            <Label Content="Due Date"/>
            <TextBox x:Name="TaskDueDateBox" TextWrapping="Wrap" Text="{Binding Path=DueDate, Mode=Default}" Width="240"/>
            <Label Content="Assignee"/>
            <TextBox x:Name="TaskAssigneeBox" TextWrapping="Wrap" Text="{Binding Path=Assignee, Mode=Default}" Width="240"/>

            <Button x:Name="CreateTaskButton" Content="Create Task" Click="CreateTaskButton_Click" Width="240" Margin="0,8,0,8" />

            <Label Content="Task" FontWeight="Bold"/>
            <TextBlock x:Name="displayTask" TextWrapping="Wrap" Text="{Binding Path=About, Mode=OneWay}" Width="240"/>

        </StackPanel>

    </Grid>
</UserControl>
